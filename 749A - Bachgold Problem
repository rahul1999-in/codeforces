void test(){
	int n;
	cin>>n;
	
	if(n%2 == 0){
		cout<<n/2<<endl;
		for(int i=1; i<=n/2; i++){
			cout<<2<<" ";
		}
		
	}else{
		int r = (n - 1)/2;
		cout<<r<<endl;
		for(int i=1; i<= r-1; i++){
			cout<<2<<" ";
		}
		cout<<3;
	}
  }
  
