#include<bits/stdc++.h>
#define lli long long int 
#define ll long long 
#define f(i, n) for(int i=0; i<n; i++)

using namespace std;



void test()
{
	int n;
	cin>>n;
	int a; cin>>a;
	int min = a;
	int max = a;
	int c=0;
	for(int i=2; i<=n; i++)
	{
		cin>>a;
		if(a>max){
			max = a;
			c++;
		}
		else if(a < min)
		{
			min = a;
			c++;
		}
	}
	
	cout<<c<<endl;
}

int main(){
	
	
	test();
	
	return 0;

}
