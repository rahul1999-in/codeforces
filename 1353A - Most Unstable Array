using namespace std;

void test(){
	int a, b;
	cin>>a>>b;
	if(a==1) {
		cout<<0<<endl;
		return;
	}
	if(a == 2) {
		cout<<b<<endl;
		return ;
	}
	cout<<b* min(2, a -1)<<endl;
	
}
int main(){
	
	int t;
	cin>>t;
	
	while(t--){
		test();
	}
	
	//test();
	return 0;

}





